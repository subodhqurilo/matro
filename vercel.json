{
  "version": 3,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://your-backend-url.com",
    "NEXTAUTH_URL": "https://your-vercel-app.vercel.app"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_API_URL": "https://your-backend-url.com",
      "NEXTAUTH_URL": "https://your-vercel-app.vercel.app"
    }
  }
}
